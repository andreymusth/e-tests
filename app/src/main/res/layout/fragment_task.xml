<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTask"
        style="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I __ driving a car right now." />

    <RadioGroup
        android:id="@+id/rgVariants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTask">


        <RadioButton
            android:id="@+id/var1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorBlue"
            android:textColor="@drawable/rb_text_color"
            android:textColorHighlight="@color/colorLightGreen"
            android:textSize="30sp"
            android:theme="@style/RadioButtonStyle"
            tools:text="being" />

        <RadioButton
            android:id="@+id/var2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorBlue"
            android:textColor="@drawable/rb_text_color"
            android:textColorHighlight="@color/colorLightGreen"
            android:textSize="30sp"
            android:theme="@style/RadioButtonStyle"
            tools:text="have" />

        <RadioButton
            android:id="@+id/var3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorBlue"
            android:textColor="@drawable/rb_text_color"
            android:textColorHighlight="@color/colorLightGreen"
            android:textSize="30sp"
            android:theme="@style/RadioButtonStyle"
            tools:text="am" />

        <RadioButton
            android:id="@+id/var4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorBlue"
            android:textColor="@drawable/rb_text_color"
            android:textColorHighlight="@color/colorLightGreen"
            android:textSize="30sp"
            android:theme="@style/RadioButtonStyle"
            tools:text="is" />


    </RadioGroup>
</android.support.constraint.ConstraintLayout>